pkgname=('pes-rasum')
pkgver=8
pkgrel=1
pkgdesc="Provides the rasum RetroAchievements checksum utility"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
groups=('pes')
makedepends=('gcc')
source=('git+git://github.com/Pi-Entertainment-System/rasum')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/rasum"
  git rev-list --count HEAD
}

prepare() {
	cd "$srcdir/rasum"
	git submodule init
	git submodule update
}

build() {
	cd "$srcdir/rasum"
	make
}

package() {
	install -d "$pkgdir"/opt/pes/bin/
	install -m 755 "$srcdir/rasum/rasum" "$pkgdir"/opt/pes/bin/
	install -Dm644 "$srcdir/rasum/LICENSE" -t "$pkgdir"/opt/pes/share/licenses/$pkgbase
}
