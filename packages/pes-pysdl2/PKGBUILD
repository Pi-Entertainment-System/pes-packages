pkgname=pes-pysdl2
_ver=0.9.9
pkgver=${_ver}
pkgrel=1
arch=('armv7h')
url='https://www.libsdl.org'
license=('CC0 Public Domain Dedication')
pkgdesc='Python SDL2 library'
depends=('python' 'sdl2')
makedepends=('python' 'sdl2')
groups=('pes')
source=("https://github.com/marcusva/py-sdl2/archive/refs/tags/${_ver}.tar.gz")
sha256sums=('2b32a4c28369ea52ebb1051b85202e9fd30590fd1a187dde93381f021e005bc3')

build() {
  cd $srcdir/py-sdl2-${_ver}
  python setup.py build
}

package() {
  mkdir -p /opt/pes

  cd $srcdir/py-sdl2-${_ver}
  python setup.py install --root="$pkgdir" --prefix=/opt/pes --optimize=1 --skip-build
}
