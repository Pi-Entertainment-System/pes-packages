pkgname=('pes-retroarch-coreinfo')
pkgver=139
pkgrel=1
epoch=1
pkgdesc="RetroArch core info files"
arch=('any')
license=('MIT')
groups=('pes')
depends=('pes-retroarch')
_commit='fdaa9195bb8c0d45db943dff1ed7d0b6763a6701'
source=("git+https://github.com/libretro/libretro-core-info.git#commit=${_commit}")
sha256sums=('SKIP')

pkgver() {
  cd libretro-core-info
  git rev-list --count HEAD
}

package() {
  cd libretro-core-info
  make INSTALLDIR=${pkgdir}/opt/pes/lib/libretro/info install
}
